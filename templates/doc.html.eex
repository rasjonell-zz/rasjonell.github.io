<article>
  <div>
    <%
      read_time = @page.extras["read_time"]
      minutes = if read_time === 1, do: "minute", else: "minutes"
    %>
    <header>
      <h1><%= @page.title %></h1>
      <p>About <%= read_time %> <%= minutes %> to read</p>
      <hr>
    </header>
    <serum-toc start="2" end="4" />
    <%= @contents %>
  </div>
</article>
